#include<stdio.h>

int main(){
    int n, k;
    scanf("%d %d", &n, &k);
    int a[n];

    int even = 2;
    int odd = 1;
    int mid = (n+1)/2;

    for(int i = 0; i < mid; i++){
        a[i] = odd;
        odd += 2;
        a[mid+i]=even;
        even += 2;
    }    

    printf("%d\n", a[k-1]);
    
    return 0;
}